@model TransferDto;
@{
    ViewData["Title"] = "Transfer";
}
<!---------------------------------------------[Main Content Start]---------------------------------------------->
<div class="shadow shadow-primary shadow-intensity-lg p-3">
    <div class="card-body">
        <h3 class="mb-3"> Transfer (Malaysia to Nepal) </h3>
        <form method="post" asp-controller="transfer" asp-action="send">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <!-- Sender Information -->
                <h2 class="h5 mb-4 fw-bold"> Sender Information </h2>

                <div class="col-md-4 mb-3">
                    <label asp-for="SenderFirstName" class="form-label">First Name</label>
                    <input asp-for="SenderFirstName" class="form-control" />
                    <span asp-validation-for="SenderFirstName" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="SenderMiddleName" class="form-label">Middle Name</label>
                    <input asp-for="SenderMiddleName" class="form-control" />
                    <span asp-validation-for="SenderMiddleName" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="SenderLastName" class="form-label">Last Name</label>
                    <input asp-for="SenderLastName" class="form-control" />
                    <span asp-validation-for="SenderLastName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="SenderAddress" class="form-label">Address</label>
                    <input asp-for="SenderAddress" class="form-control" />
                    <span asp-validation-for="SenderAddress" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="SenderCountry" class="form-label">Country</label>
                    <input asp-for="SenderCountry" class="form-control" />
                    <span asp-validation-for="SenderCountry" class="text-danger"></span>
                </div>
            </div>

            <hr />

            <!-- Receiver Information -->
            <div class="row">
                <h2 class="h5 mb-4 fw-bold"> Receiver Information </h2>

                <div class="col-md-4 mb-3">
                    <label asp-for="RecieverFirstName" class="form-label">First Name</label>
                    <input asp-for="RecieverFirstName" class="form-control" />
                    <span asp-validation-for="RecieverFirstName" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="RecieverMiddleName" class="form-label">Middle Name</label>
                    <input asp-for="RecieverMiddleName" class="form-control" />
                    <span asp-validation-for="RecieverMiddleName" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="RecieverLastName" class="form-label">Last Name</label>
                    <input asp-for="RecieverLastName" class="form-control" />
                    <span asp-validation-for="RecieverLastName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="RecieverAddress" class="form-label">Address</label>
                    <input asp-for="RecieverAddress" class="form-control" />
                    <span asp-validation-for="RecieverAddress" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="RecieverCountry" class="form-label">Country</label>
                    <input asp-for="RecieverCountry" class="form-control" />
                    <span asp-validation-for="RecieverCountry" class="text-danger"></span>
                </div>
            </div>

            <hr />

            <!-- Bank and Transfer Details -->
            <div class="row">
                <h2 class="h5 mb-4 fw-bold"> Bank and Transfer Details </h2>

                <div class="col-md-6 mb-3">
                    <label asp-for="BankName" class="form-label">Bank Name</label>
                    <input asp-for="BankName" class="form-control" />
                    <span asp-validation-for="BankName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="AccountNumber" class="form-label">Account Number</label>
                    <input asp-for="AccountNumber" class="form-control" />
                    <span asp-validation-for="AccountNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="TransferAmount" class="form-label">Transfer Amount [MYR]</label>
                    <input asp-for="TransferAmount" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="TransferAmount" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Send</button>
        </form>
    </div>
</div>
<!----------------------------------------------[Main Content End]----------------------------------------------->